<!DOCTYPE html>
%html
  %head 
    %title Trade
    = stylesheet_link_tag :all 
    = javascript_include_tag :defaults
    = javascript_include_tag "iefix"
    = csrf_meta_tag

  %body
    #toolbar
      - unless current_user
        = link_to 'Login', login_url
        = link_to 'Register', new_user_path
      - else
        = link_to 'Profile', current_user
        = link_to "Logout", :controller => 'user_sessions', :action => 'destroy'
        -#= link_to "Logout", logout_url
    #navibar
      %ul{:id=>'menu'}
        %li 
          = link_to 'Home', '/'
        %li{:class=>'sub'} 
          = link_to 'Task' 
          %ul
            %li
              = link_to 'Taobao Task'
            %li
              = link_to 'Paipai Task'
        %li{:class=>'sub'} 
          = link_to 'Rules'

    %br

    %p
      - if flash[:notice]
        = flash[:notice]

    #content
      = yield
